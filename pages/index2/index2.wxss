@import "/utils/wxParse/wxParse.wxss";
.contain {
  padding-bottom: 125rpx;
  overflow: hidden;
}



/* 赛程介绍 */
.introbgc{
  width: 100%;
  height: 270rpx;
  position: relative;
}
.introbgc image{
  width: 100%;
  height: 100%;
}
.introbgc text.tit{
  width: 100%;
  height: 120rpx;
  font-size: 34rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top:0;
  left:0;
}
.introbox{
  width: 84%;
  padding: 0 5%;
  position: absolute;
  top:120rpx;
  left: 3%;
  margin-bottom: 200rpx;
  box-shadow: 0 0 20rpx #f6f6f6;
  background: #fff;
  border-radius: 20rpx;
}
.introbox .bt{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.introbox .bt .line{
  display: flex;
  width:5rpx;
  height: 30rpx;
  background: #007A33;
  margin-right: 20rpx;
}
.introbox .bt .text{
  font-size: 30rpx;
  color:#272727;
}
.introbox .itrotest{
  width: 100%;
  font-size: 26rpx;
  color:#626262;
  line-height: 44rpx;
}
.introbox .ewmimg{
  width: 335rpx;
  height: 335rpx;
  margin: 40rpx auto;
}
.introbox .ewmimg image{
  width:100%;
  height:100%;
}
.introbox .introend{
   width: 100%;
  font-size: 26rpx;
  color:#4E4E4E;
  line-height: 44rpx;
}


