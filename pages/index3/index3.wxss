.contain {
  padding-bottom: 125rpx;
  overflow: hidden;
}



/* 赛程介绍 */
.introbgc{
  width: 100%;
  height: 270rpx;
  position: relative;
}
.introbgc image{
  width: 100%;
  height: 100%;
}
.introbgc text.tit{
  width: 100%;
  height: 120rpx;
  font-size: 34rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top:0;
  left:0;
}

/* 发布 */
.fabubox{
  width: 94%;
  position: absolute;
  top:120rpx;
  left: 3%;
  margin-bottom: 200rpx;
  
}
.fabubox .fabu{
  width: 90%;
  padding:0 5% 20rpx 5%;
  box-shadow: 0 0 20rpx #f6f6f6;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}
.fabubox .fabu .tit{
  width: 100%;
  font-size: 28rpx;
  color: #000;
  height:95rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  position: relative;
}
.fabubox .fabu .tit>text{
  margin-right: 30rpx;
  display:inline-block;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 30rpx;
  border-radius: 25rpx;
  background: #fff;
  color: #333;
}
.fabubox .fabu .tit>text.active{
  background: #007a33;
  color: #fff;
}
.fabubox .fabu .tit .num{
  font-size: 28rpx;
  color: #e1e4e9;
  height: 95rpx;
  line-height: 95rpx;
  position: absolute;
  top:0;
  right: 0;
}
.fabubox .fabu .tit .num text{
   color:#10843B;
}
.fabubox .fabu textarea {
  background: #fff;
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  line-height:42rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  border:1px solid #f0f0f0;
}

.fabubox .fabu .imgs{
  width:97%;
padding:20rpx 3% 20rpx 0;
overflow:hidden;
display:flex;
flex-wrap:wrap;
}
.fabubox .fabu .imgs .item,.video-box{
  width:146rpx;
height:146rpx;
border:1px solid #f0f0f0;
margin-right:30rpx;
margin-bottom:30rpx;
position:relative;
display: flex;
align-items: center;
justify-content: center;
}
.video-box video{
    width:100%;
    height:100%;
}
.fabubox .fabu .imgs .item .addicon{
  width: 43rpx;
  height: 43rpx;
}
.fabubox .fabu .imgs .item .img {
  width: 146rpx;
  height: 146rpx;
}
.fabubox .fabu .imgs .item .del {
width:48rpx;
height:48rpx;
position:absolute;
top:-10rpx;
right:-10rpx;

}

.fabubox .btn {
  width: 90%;
  background: #F11A1A;
  background:#007a33;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 46rpx;
  margin: 50rpx auto;
}
.zcbox{
  width: 100%;
  height: 100%;
  position:fixed;
  top:0;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.zcbox .gotozc{
  width: 150rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background:#007a33;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
}
